<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <RelativeLayout
        android:id="@+id/item_select_click"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:gravity="center"

            android:paddingStart="15dp" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_select_key"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="5JYWjQHyyowjLNHamh4RkmUssEU6xvgDvJ8fiUqTB3w5AEtRUCH"
                android:textColor="@color/personal_txt_black"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_select_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/selset_actiav_coloc_list"
                android:text="owner"
                android:textColor="@color/import_txt_help"
                android:textSize="8sp" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_choose_selected" />

        <View
            android:id="@+id/item_select_view"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/personal_view_ash" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>