                                android:layout_height="12dp"
                                app:srcCompat="@drawable/bos_icon_shuaxin_default" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="@string/change_another_one"
                                android:textColor="@color/security_coloc_change"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/secret_edit_two"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/pwd_edit_background"
                        android:gravity="center_vertical"
                        android:hint="@string/security_hint_answer"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/personal_txt_black"
                        android:textSize="14sp" />

                </LinearLayout>
                <!---->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/secret_txt_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.您母亲的名字？"
                            android:textColor="@color/personal_txt_black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/secret_linear_click_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                app:srcCompat="@drawable/bos_icon_shuaxin_default" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="@string/change_another_one"
                                android:textColor="@color/security_coloc_change"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/secret_edit_three"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/pwd_edit_background"
                        android:gravity="center_vertical"
                        android:hint="@string/security_hint_answer"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/personal_txt_black"
                        android:textSize="14sp" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/security_hint_content"
                    android:textColor="#FFE65062"
                    android:textSize="12sp" />

            </LinearLayout>
<!---->

            <android.support.v7.widget.AppCompatTextView
